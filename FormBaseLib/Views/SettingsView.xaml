<Window x:Class="FormBaseLib.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="474.899" Width="836.842">
    <Grid Background="White" Margin="0,0,2,-2">
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="177*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="764*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Settings" HorizontalAlignment="Left" Margin="24,17,0,0" VerticalAlignment="Top" FontSize="32" FontFamily="Segoe UI Semilight" Height="53" Width="121" Grid.Column="1"/>
        <Canvas Grid.Column="1" HorizontalAlignment="Left" Height="3" Margin="29,68,0,0" VerticalAlignment="Top" Width="30" Background="#FF0085E3" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Frame x:Name="Frame" Content="Frame" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        <StackPanel Grid.RowSpan="2" Background="#FF0085E3" Margin="-4,0,0,0">
            <Button x:Name="BasicSettingsButton" MinHeight="63" Background="#FF0085E3" Foreground="White" FontSize="18" BorderThickness="0" Click="BasicSettingsButton_Click">
                <Image Source="../resources/icons8-settings-32.png" Stretch="None"/>
            </Button>
            <Button x:Name="AdvancedSettingsButton" MinHeight="63" Background="#FF0085E3" Foreground="White" FontSize="18" BorderThickness="0" Click="AdvancedSettingsButton_Click" Height="26">
                <Image Source="../resources/icons8-slider-32.png" Stretch="None"/>
            </Button>
        </StackPanel>


    </Grid>
</Window>
