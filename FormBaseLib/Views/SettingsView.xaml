            <Label Content="Activate upon launch" Grid.Column="1" HorizontalAlignment="Left" Margin="24,121,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Activate sleep blocking automatically." Grid.Column="1" HorizontalAlignment="Left" Margin="24,150,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Foreground="#FFACACAC"/>
        </Canvas>


    </Grid>
</Window>
