        <Canvas Grid.Column="1" Background="White" Grid.Row="1" HorizontalAlignment="Left" Width="750">
            <Label Content="Start the program Windows startup" Grid.Column="1" HorizontalAlignment="Left" Margin="24,35,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
